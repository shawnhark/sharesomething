%article.posts
#bg
  .container.fluid
    .row
    %h2= @post.title
  %ul
  .container-fluid
    .row-fluid
      .span2
        .well
          .text-center
            %h4
            .btn-toolbar
              .btn-group
                %h5
                  %i.icon-circle-arrow-up
                  votes
                  %i.icon-circle-arrow-down
      .span9
        .well
          %h4= link_to "#{@post.description}", @post.post_url
          %small
            posted on #{display_datetime(@post.created_at)}
    %section.comments.container-fluid
      .row-fluid
        .span2
          %h4 User Comments:

    = form_for [@post, Comment.new] do |f|
      .row-fluid
      .span2
      .span9
        .form-group
          %label Add your comment:
          .row.offset-2
            = f.text_area :content, rows: 6, class: 'col-md-10', placeholder: 'Add your comment here...'
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn.btn-info")
          = link_to "Cancel", @post

      %ul
        - @comments.each do |comment|
          %article.review
            %li.row
              .col-md-8
                - if @comments.count.to_i = 0
                  %p
                - else
                  %p= comment.content

#bottompad