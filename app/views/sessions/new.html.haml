%section.sign_in.container
#bg

  .container-fluid
    .row-fluid
      %h1 Sign In
      %br
      .well
        = form_tag sessions_path, class: 'form-horizontal' do

          %br
          %form
            .form-group
              .row
                %label.col-md-2.control-label
                .col-lg-7
                  = label_tag :email
                  = email_field_tag :email
            .form-group
              .row
                %label.col-md-2.control-label
                .col-lg-7
                  = label_tag :password
                  = email_field_tag :password

        %fieldset.actions.form-group.col-sm-offset-2
          %input(type="submit" value="Sign in" class="btn btn-primary")

#bottompad