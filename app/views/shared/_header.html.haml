%nav.navbar.navbar-fixed-top.navbar-inverse{role: "navigation"}
  .container-fluid
    .navbar-header
    #top
      = link_to "ShareSomething", home_path, class: 'brand'
      %ul.nav.nav-navbar.list-inline
        %li.divider-vertical.clearfix
        %li.col-xsm-2
          = link_to "Words", words_path
        %li.col-xsm-2
          = link_to "Pics", pics_path
        %li.col-xsm-2
          = link_to "Vids", vids_path
        %li.col-xsm-6.form-inline
          = form_tag search_posts_path, class: "form.col-md-6.navbar-form" do
            %input.form-control(name="search_term" type="search" placeholder="Search posts here...")
            %button.btn.btn-info(type="submit") Search

      %ul.nav.navbar-nav.pull-right
        %ul.nav.nav-navbar.list-inline
        - if logged_in?
          %li.dropdown
            %a(href="#" id="dlabel label-default" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              Welcome, #{current_user.full_name}
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel label-default")
              %li
                %a(href="#") Invite a friend
                %a(href="#") Account
                %a(href="#") Plan and Billing
                = link_to 'Sign Out', logout_path
        - else
          %li.dropdown
            %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
              Welcome, guest
              %b.caret
            %ul.dropdown-menu.dropdown-menu-right(role="menu" aria-labelledby="dlabel")
              %li
                = link_to 'Register', register_path
                %a.divider
                = link_to 'Sign In', login_path
#toppad